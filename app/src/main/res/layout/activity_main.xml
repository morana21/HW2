<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        /**
        External Citation
        Date: 16 February 2010
        Problem: Could not link surfaceview implemented class
        to the xml,
        Resource: Prof. Nux
        Solution: I used the example code from moodle
        */

        <com.example.hw2.MyCanvas
            android:id="@+id/shape_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shape_name"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Shape Name" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <TextView
            android:id="@+id/r_text"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Red: 0" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <SeekBar
            android:id="@+id/r_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max= "255"
            android:layout_weight="20" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <TextView
            android:id="@+id/g_text"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Green: 0" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <SeekBar
            android:id="@+id/g_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max= "255"
            android:layout_weight="20" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <TextView
            android:id="@+id/b_text"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Blue: 0" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <SeekBar
            android:id="@+id/b_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max= "255"
            android:layout_weight="20" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />
    </LinearLayout>

</LinearLayout>